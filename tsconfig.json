{
  "include": [
    "src"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.spec.js",
    "node_modules"
  ],
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": false,
    "incremental": false,
    "declaration": true,
    "sourceMap": false,
    "module": "CommonJS",
    "target": "ESNext",
    "lib": ["ESNext"],
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@lib": ["src/lib"],
      "@common": ["src/common"],
      "@configs": ["src/configs"],
      "@modules": ["src/modules"],
      "@modules/*": ["src/modules/*"],
    }
  }
}